<Window x:Class="DpDisp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DpDisp.WPF"
        mc:Ignorable="d"
        Title="DPT Viewer" Height="800" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToolBarTray>
            <ToolBar>
                <ToggleButton Name="btnConnect" Click="AppBarConnect_Click"/>
                <Button Content="保存" Click="AppBarSave_Click" />
            </ToolBar>
        </ToolBarTray>
        <Image x:Name="image1" Margin="5" Grid.Row="1" Stretch="Uniform"/>

    </Grid>
</Window>
